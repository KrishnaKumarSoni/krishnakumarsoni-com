{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 30,
                "memory": 1024
            }
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/static/(.*)",
            "destination": "/static/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/app.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    }
} 