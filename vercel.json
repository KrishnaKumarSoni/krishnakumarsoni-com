{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/static/(.*)",
            "destination": "/static/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/app.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    },
    "functions": {
        "app.py": {
            "memory": 1024,
            "maxDuration": 30
        }
    }
} 